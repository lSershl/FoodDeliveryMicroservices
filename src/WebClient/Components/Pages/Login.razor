@page "/login"
@inherits LoginBase
@rendermode InteractiveServer

<PageTitle>Вход в систему</PageTitle>

<div style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%);">
    <div class="col-12 col-lg-12 p-0">
        <h3>Вход в систему</h3>
        <EditForm Model="@Login" OnValidSubmit="LoginButtonClicked">
            <DataAnnotationsValidator />
            <div class="form-group">
                <lable class="form-label" for="phone_number">Номер телефона: </lable>
                <InputText class="form-control" id="phone_number" @bind-Value="Login.PhoneNumber" style="max-width: 300px;"></InputText>
                <ValidationMessage For="@(() => Login.PhoneNumber)" />
            </div>
            <div class="form-group mt-3">
                <lable class="form-label">Пароль: </lable>
                <InputText @bind-Value="Login.Password" class="form-control" style="max-width: 300px;"></InputText>
            </div>
            <div class="form-group mt-3">
                <button class="btn btn-primary" type="submit">Войти</button>
            </div>
        </EditForm>
    </div>
</div>
